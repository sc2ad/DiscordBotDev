{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "",
    "title": "Bot Config",
    "type": "object",
    "description": "Config for the bot",
    "properties": {
        "prefix": {
            "title": "Prefix",
            "type": "string",
            "description": "The prefix of the bot",
            "default": "!"
        },
        "commands": {
            "title": "Commands",
            "type": "array",
            "description": "A list of commands for the bot",
            "items": {
                "title": "Command",
                "type": "object",
                "description": "A command for the bot",
                "properties": {
                    "ID": {
                        "title": "ID",
                        "type": "string",
                        "description": "The ID of the command, must be unique"
                    },
                    "name": {
                        "title": "Name",
                        "type": "string",
                        "description": "The name of the command"
                    },
                    "type": {
                        "title": "Type",
                        "type": "string",
                        "description": "The type of the command",
                        "default": "prefixedCommand",
                        "enum": [
                            "prefixedCommand",
                            "macro"
                        ]
                    },
                    "arguments": {
                        "title": "Arguments",
                        "type": "array",
                        "description": "The arguments for this command",
                        "items": {
                            "title": "Argument",
                            "type": "object",
                            "description": "An argument for this command",
                            "properties": {
                                "name": {
                                    "title": "Name",
                                    "type": "string",
                                    "description": "The name of the argument"
                                },
                                "type": {
                                    "title": "Type",
                                    "type": "string",
                                    "description": "The type of the argument",
                                    "enum": [
                                        "_selfMention",
                                        "string",
                                        "command",
                                        "user",
                                        "mention",
                                        "int",
                                        "number",
                                        "file.json",
                                        "existingFile.json"
                                    ]
                                }
                            },
                            "required": [
                                "name",
                                "type"
                            ]
                        }
                    },
                    "lastArgumentMultiple": {
                        "title": "Last Argument Wildcard",
                        "type": "boolean",
                        "description": "Whether to allow multiple of the same type of argument of the last argument",
                        "default": false
                    },
                    "help": {
                        "title": "Help",
                        "type": "string",
                        "description": "Help to provide for this command"
                    },
                    "usage": {
                        "title": "Usage",
                        "type": "string",
                        "description": "The command as it should appear when being used (do not include the prefix)"
                    }
                },
                "if": {
                    "properties": {
                        "type": {
                            "enum": [
                                "macro"
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ]
                },
                "then": {
                    "required": [
                        "ID",
                        "name",
                        "type",
                        "usage"
                    ]
                },
                "else": {
                    "required": [
                        "ID",
                        "name",
                        "type",
                        "arguments",
                        "usage"
                    ]
                },
                "maxProperties": 7
            }
        }
    },
    "required": [
        "prefix",
        "commands"
    ]
}